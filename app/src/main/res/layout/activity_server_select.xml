<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:paddingBottom="@dimen/select_server_layout_padding_bottom">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/donate_image_margin"
        android:layout_weight="3"
        android:src="@drawable/donate_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/select_server_text_view_padding"
        android:text="@string/explain_about_block_chain"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/select_server_text_size" />

    <Button
        android:id="@+id/btnLocalServer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/local_server" />

    <Button
        android:id="@+id/btnTokyoServer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tokyo_server" />

    <Button
        android:id="@+id/btnOsakaServer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/osaka_server" />

</LinearLayout>