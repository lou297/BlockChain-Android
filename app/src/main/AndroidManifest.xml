<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.blockchainand">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hyperledger"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hyperledger"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RegisterActivity"></activity>
        <activity
            android:name=".ServerSelectActivity"
            android:label="@string/select_server_activity_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FloatingMenuActivity.CreateActivity"
            android:label="@string/create_activity_label" />
        <activity
            android:name=".FloatingMenuActivity.DonateActivity"
            android:label="@string/donate_activity_label" />
        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity_label"></activity>
        <activity
            android:name=".MainTabMenuActivity"
            android:label="@string/tab_menu_activity_label" />
    </application>

</manifest>